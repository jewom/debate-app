<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="!!!!!!!!!!!!!!!!!!Son fin de débat"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.liltof.library.tools.PushScale
            android:id="@+id/sound1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_green"  android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:text="MODIFIER"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.liltof.library.tools.PushScale>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="!!!!!!!!!!!!!!!!!!!!Son temps de parole dépassé"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.liltof.library.tools.PushScale
            android:id="@+id/sound2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_green"  android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:text="MODIFIER"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.liltof.library.tools.PushScale>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="!!!!!!!!!!!!!!!!!Son temps de parole presque terminé"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.liltof.library.tools.PushScale
            android:id="@+id/sound3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_green"  android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:text="MODIFIER"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.liltof.library.tools.PushScale>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="!!!!!!!!!!!!!!!!!!Temps restant pour presque terminé \n (% du débat)"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:max="100"
            android:progress="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>