            </RelativeLayout>
              
           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp" >

                <TextView
                    android:id="@+id/thanksto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="> And thanks to :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>
            
              
                           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TextView
                    android:id="@+id/thanksto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="- Cassandra RADOM\n- Émilie LEGRAND\n- Bertrand LE JAN\n- Jean-Marie CLAMENT\n- Kevin DUCHANGE\n- Mehdi DEBBOUZA\n- Subase KICHENANE\n- Thibault NUYTENS"
                    android:textAppearance="?android:attr/textAppearanceLarge"
