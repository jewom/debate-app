<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_transaction_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_transaction_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titre"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/item_transaction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="desc" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_transaction_hiddenmore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="48dp"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp" >

            <TextView
                android:id="@+id/item_transaction_type"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="90"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                
                android:id="@+id/item_transaction_icon_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="10"
                android:src="@drawable/in_pro" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_transaction_transmitter_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/item_transaction_transmitter_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/item_transaction_receiver_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

</LinearLayout>